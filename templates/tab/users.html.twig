<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="{{ asset('node_modules/bootstrap/dist/css/bootstrap.css') }}" class="css">
    <title>Document</title>
</head>
<body>
<table class="table">
    <tr class="table-{% if (users |length is divisible by(3)) %}danger{% else %}warning{% endif %}">
        <td>First Name</td>
        <td>Last Name</td>
        <td>Age</td>
    </tr>
    {% for user in users %}
        <tr>
            <td>{{ user.firstName }}</td>
            <td>{{ user.lastName }}</td>
            <td>{{ user.age }}</td>
        </tr>
    {% endfor %}
</table>

</body>
</html>